spring.application.name=cinema-managing-system

# MongoDB Atlas Configuration (Use environment variables)
spring.data.mongodb.uri=${MONGODB_URI:mongodb://localhost:27017/cinema_db}
spring.data.mongodb.database=${MONGODB_DATABASE:cinema_db}

# Server Configuration
server.port=${SERVER_PORT:8081}

# MongoDB Connection Settings
spring.data.mongodb.auto-index-creation=true

# MongoDB Connection Pool Settings
spring.data.mongodb.connection-timeout=30000
spring.data.mongodb.socket-timeout=60000
spring.data.mongodb.server-selection-timeout=30000

# Graceful Shutdown Settings
server.shutdown=graceful
spring.lifecycle.timeout-per-shutdown-phase=30s

# Keep application alive
spring.main.keep-alive=true

# JWT Configuration (Use environment variables)
app.jwt.secret=${JWT_SECRET:change-this-to-a-secure-256-bit-secret-key}
app.jwt.expiration=${JWT_EXPIRATION:86400000}

# CORS Configuration (Use environment variables)
app.cors.allowed-origins=${CORS_ALLOWED_ORIGINS:http://localhost:3000,http://localhost:3001}

# Mail Configuration (Use environment variables)
spring.mail.host=${MAIL_HOST:smtp.gmail.com}
spring.mail.port=${MAIL_PORT:587}
spring.mail.username=${MAIL_USERNAME:your-email@gmail.com}
spring.mail.password=${MAIL_PASSWORD:your-app-password}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# File Upload
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Application Configuration (Use environment variables or fetch from database)
app.admin.default-email=${ADMIN_EMAIL:admin@cinema.com}
app.admin.default-password=${ADMIN_PASSWORD:admin123}
app.user.welcome-bonus=${USER_WELCOME_BONUS:100}
app.seats.rows=${SEATS_ROWS:A,B,C,D,E,F,G,H,I,J}
app.seats.per-row=${SEATS_PER_ROW:10}

# Stripe Payment Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
# Replace these with your actual keys
stripe.api.key=${STRIPE_SECRET_KEY:sk_test_your_key_here}
stripe.public.key=${STRIPE_PUBLIC_KEY:pk_test_your_key_here}
stripe.webhook.secret=${STRIPE_WEBHOOK_SECRET:whsec_your_webhook_secret}
