# Backend Environment Variables Example
# Copy this file to .env (in backend root) and update with your actual values

# Server Configuration
SERVER_PORT=8081

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=cinema_db

# JWT Configuration
JWT_SECRET=mySecretKeyForJWTTokenGenerationThatIsAtLeast256BitsLongForHS256Algorithm
JWT_EXPIRATION=86400000

# CORS Configuration - Frontend URL(s)
# For production, include your Vercel deployment URLs
CORS_ALLOWED_ORIGINS=https://cinema-management-system-pbud-qlh8y0fgo.vercel.app,https://cinema-management-system-tan.vercel.app,http://localhost:3000,http://localhost:3001

# Admin Configuration
ADMIN_EMAIL=admin@cinema.com
ADMIN_PASSWORD=admin123

# User Configuration
USER_WELCOME_BONUS=100

# Seat Configuration
SEATS_ROWS=A,B,C,D,E,F,G,H,I,J
SEATS_PER_ROW=10

# Stripe Payment Configuration
STRIPE_API_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# Mail Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
